{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
